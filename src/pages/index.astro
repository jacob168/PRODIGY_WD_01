---
import Sponsers from '../components/Sponsers.astro'
import RootLayout from '../layouts/RootLayout.astro'
import FeatureSteps from '../components/FeatureSteps.astro'
import CommonQA from '../components/CommonQA.astro'
import BrowserExtension from '../components/BrowserExtension.astro'
import Testimonials from '../components/Testimonials.astro'
import FeatureSection from '../layouts/FeatureSection.astro'
import { ArrowRight } from 'lucide-react'
import { Image } from 'astro:assets'
import landingBear from '../assets/landingBear.png'
import footer from '../assets/footer.png'
---

<RootLayout page='home'>
	<div class="container mx-auto bg-mainBackground/75">
		<section class="landing bg-gradient-to-b from-mainBackground/75 to-mainLightBackground/75 border-b rounded-b-[3rem] border-mainLightBackground flex flex-col md:flex-row items-center justify-between">
			<div class="lg:basis-1/3 px-6 lg:px-20 h-full flex item justify-center flex-col gap-5">
				<div class="gradient-des px-1 font-bold text-sm">
					Where crypto trading meets simplicity and security
				</div>
				<h1 class="text-5xl lg:text-7xl">
					Decentralized <span class="block">anonymous</span> <span class="block">platform</span>
				</h1>
				<p class="text-stone-300 py-2 px-1 font-bold md:w-[75%]">
					Secure decentralized anonymous platform where people manage cryptocurrencies using any payment methods.
				</p>
				<div class="flex flex-col lg:flex-row items-center px-5 gap-3">
					<button class="text-stone-50 bg-main rounded-2xl px-6 py-2 transition duration-150 hover:bg-stone-50 hover:text-mainLightBackground flex items-center gap-3">
						View Marketplace
						<ArrowRight size={21}/>
					</button>
					<button class="text-stone-50 rounded-2xl px-5 py-2 transition duration-150 hover:scale-105">
						Get Started
					</button>
				</div>
			</div>
			<div class="hidden md:block lg:basis-2/3">
				<Image src={landingBear} alt={'cripz bear'} loading={'eager'}  class="w-full h-full object-cover"/>
			</div>
		</section>
		<Sponsers/>
		<FeatureSteps/>
		<CommonQA/>
		<FeatureSection>
			<BrowserExtension/>
			<Testimonials/>
		</FeatureSection>
		<div class="flex flex-col items-center gap-3">
			<div class="gradient-des font-bold text-xs uppercase text-center leading-relaxed">
				The most private, non-custodial, cryptocurrency wallet
			</div>
			<h3 class="text-4xl md:text-5xl text-center font-bold">
				Decentralized platform
			</h3>
			<div class="md:w-[75%] md:ml-[3.75rem]">
				<Image src={footer} alt={'cripz bear'} class="w-full h-full object-cover"/>
			</div>
		</div>
	</div>
</RootLayout>

<style>
	.landing{
		height: calc(100vh - 100px);
	}
</style>
