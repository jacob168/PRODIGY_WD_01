---
import FeatureSection from '../layouts/FeatureSection.astro'
import opera from '../assets/opera.png'
import brave from '../assets/brave.png'
import firefox from '../assets/firefox.png'
import edge from '../assets/edge.png'
import safari from '../assets/safari.png'
import chrome from '../assets/chrome.png'
import { Image } from 'astro:assets'
import logo from '../assets/logo.png'
import { AlignCenter, ArrowDownLeftFromCircleIcon, ArrowUpRightFromCircle, Lock, RefreshCw } from 'lucide-react'
import browserExtension  from '../assets/browser-extension.png'
const browsers = [opera, brave, firefox, edge, safari, chrome]

---
<h3 class="col-span-2 text-center text-3xl md:text-4xl font-bold leading-relaxed bg-gradient-to-t bg-clip-text text-transparent from-main via-stone-200 to-stone-50">Install CryptoWallet for your browser</h3>
<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-5 items-center justify-center">
    {
        browsers.map((browser)=>{
            return(
            <Image src={browser} alt={"browser"} width={50} height={50}/>
            )
        })
    }
</div>
<div class="bg-gradient-to-r from-[#6256de] to-[#16c6d0] font-bold rounded-full p-[0.1rem]">
    <button class='bg-mainBackground text-lg font-bold rounded-full px-8 py-2 transition duration-100 hover:bg-gradient-to-r hover:from-[#6256de] hover:to-[#16c6d0] hover:text-mainBackground'>Install Extension</button>
</div>
<p class="text-center font-bold text-sm leading-relaxed bg-gradient-to-b bg-clip-text text-transparent from-stone-300 to-stone-400">
    Install of this version of CripzWallet(desktop) are available for
    <span class="block">
        Windows 64-bit, Windows 32-bit, macOS Intel, macOS ARM 64 and Linux.
    </span>
</p>
<div class="hidden xl:flex flex-col relative bg-mainLightBackground/50 backdrop-blur-lg px-4 pt-6 rounded-t-lg w-[90%] h-full">
    <span class="radial absolute -z-[1] w-full h-full inset-0"></span>
    <div class="flex items-center px-2 pb-6">
        <div class="flex items-center gap-2">
            <span class="w-3 h-3 bg-[#ed6a5f] rounded-full"></span>
            <span class="w-3 h-3 bg-[#f6bf4f] rounded-full"></span>
            <span class="w-3 h-3 bg-[#63c655] rounded-full"></span>
        </div>
        <div class="absolute left-1/2 -translate-x-1/2 bg-[#100c25] w-[30rem] h-7 rounded-md flex gap-2 items-center justify-center px-3">
            <Lock size={14}/>
            <p class="text-sm">cripz.com</p>
            <RefreshCw size={14} className='absolute right-2 top-1/2 -translate-y-1/2'/>
        </div>
    </div>
    <div class="flex items-end justify-between">
        <div class="bg-mainLightBackground/30 relative mt-10 ml-16 p-4 flex items-center flex-col gap-5 w-[22rem] rounded-t-md">
            <div class="flex items-center">
                <a href='/' class='flex items-center gap-3'>
                    <Image src={logo} alt="cripz logo" class='mt-2' loading={'eager'} width={30} height={30}/>
                    <h3 class='text-2xl mt-1'>cripz</h3>
                </a>
                <AlignCenter className='absolute right-5 top-[1.6rem] text-stone-300'/>
            </div>
            <span class="rounded-3xl bg-mainLightBackground w-[10rem] h-[1rem] animate-pulse"></span>
            <div class="flex flex-col gap-2 items-center">
                <span class="text-4xl font-bold">$55,567.00</span>
                <span class="text-sm font-bold text-stone-400">0.000025 BTC</span>
            </div>
            <div class="flex items-center gap-5">
                <button class='bg-main text-stone-50 rounded-full px-5 py-2 flex items-center gap-3'><ArrowUpRightFromCircle size={18} className='mt-1'/>Send</button>
                <button class='bg-green text-stone-50 rounded-full px-5 py-2 flex items-center gap-3'><ArrowDownLeftFromCircleIcon size={18} className='mt-1'/>Receive</button>
            </div>
            <div class="flex items-center gap-5 py-4">
                <span class="rounded-3xl bg-mainLightBackground w-[8rem] h-[1rem] animate-pulse"></span>
                <span class="rounded-3xl bg-mainLightBackground w-[8rem] h-[1rem] animate-pulse"></span>
            </div>
        </div>
        <Image src={browserExtension} alt={'browser extension'} loading={'eager'} class="ml-auto translate-x-16"/>
    </div>
</div>

<style>
    .radial{
        background:radial-gradient(circle at bottom center,rgb(27, 75, 116, 1) 5%, rgba(9, 2, 39, 0.25) 50%)
    }
</style>
