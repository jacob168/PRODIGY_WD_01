---
import { Image } from 'astro:assets'
import FeatureSection from '../layouts/FeatureSection.astro'
import mirror from '../assets/mirror.png'
import timer from '../assets/timer.png'
import QaAccordions from './QaAccordions.tsx'
---
<FeatureSection>
    <div class="bg-main rounded-3xl p-6 md:p-12 text-stone-300 w-full h-full grid md:grid-cols-5 items-center gap-8 justify-between">
        <h3 class="col-span-full text-center md:text-start md:col-span-2 text-2xl md:text-4xl font-bold leading-relaxed">Buy and sell crypto directly to/from your counterparty.</h3>
        <div class="md:col-span-3 flex flex-col md:flex-row items-center gap-5 md:gap-10">
            <div class="flex flex-col">
                <Image src={mirror} alt={""} width={150} height={150}/>
                <h4 class="text-2xl  md:px-4 mb-4 font-bold ">Escrow service</h4>
                <p class="text-xs  md:px-4 text-stone-300 md:w-3/4 leading-relaxed font-bold">Escrow accounts are secured by multisig wallets and smart contracts.</p>
            </div>
            <div class="flex flex-col">
                <Image src={timer} alt={""} width={150} height={150}/>
                <h4 class="text-2xl  md:px-4 mb-4 font-bold ">Speed</h4>
                <p class="text-xs  md:px-4 text-stone-300 md:w-3/4 leading-relaxed font-bold">All trades happen directly between traders, sidestepping slow middlemen.</p>
            </div>
        </div>
        <QaAccordions client:visible/>
        <div class="col-span-full flex flex-col md:flex-row items-center gap-5 justify-center">
            <button class='bg-stone-50 text-main font-bold rounded-full px-5 py-2 transition duration-100 hover:bg-main hover:text-stone-50'>View Marketplace</button>
            <button class='bg-main border border-stone-50 text-stone-50 font-bold rounded-full px-5 py-2 transition duration-100 hover:bg-stone-50 hover:text-main'>Get Started</button>
        </div>
    </div>
</FeatureSection>